{
  "$schema": "https://schema.tauri.app/config/2",
  "version": "1.0.1",
  "identifier": "com.valorbg.app",
  "productName": "ValorBG",
  "mainBinaryName": "ValorBG",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZEREE2NEI5RjNBRkZBQkYKUldTLytxL3p1V1RhL2ZlUFJzRkxhVHhVUTdFNkF3ejAzZ1Brd1dpOTdrcENjQVNnQkNKaUdFS24K",
      "endpoints": [
        "https://github.com/terminaate/valorbg/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "quiet"
      },
      "dangerousInsecureTransportProtocol": true
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ValorBG",
        "width": 400,
        "height": 250,
        "decorations": false,
        "resizable": false,
        "center": true,
        "visible": false,
        "label": "main"
      },
      {
        "title": "ValorBG Updater",
        "width": 400,
        "height": 250,
        "decorations": false,
        "resizable": false,
        "center": true,
        "label": "splashscreen",
        "url": "splashscreen.html",
        "shadow": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: http://asset.localhost;",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": [
          "https://fonts.gstatic.com"
        ],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "media-src": "'self' http://asset.localhost;"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  }
}
